{
    "name": "texdc/veritas",
    "description": "Identity and Access Control - Simplified, but not anemic",
    "keywords": ["identity", "access", "iam", "ddd"],
    "license": "MIT",
    "require": {
        "php": "~5.4 || ~7.0"
    },
    "require-dev": {
        "phpunit/phpunit": "@stable",
        "phpmd/phpmd": "~1.4",
        "squizlabs/php_codesniffer": "~2.0",
        "satooshi/php-coveralls": "~0.6"
    },
    "suggest": {
        "texdc/range": "range for rich enablements",
        "texdc/momento": "Momento for domain events"
    },
    "autoload": {
        "psr-4": { "texdc\\veritas\\": "src/" }
    },
    "autoload-dev": {
        "psr-4": { "texdc\\veritas\\test\\": "test/" }
    }
}
